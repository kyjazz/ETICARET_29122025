@model List<ETICARET.Entities.Comment>

@{
    ViewData["Title"] = "Yorumlar";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Yorumlar</h2>
        <a asp-action="Create" class="btn btn-primary">Yeni Yorum</a>
    </div>

    <form method="get" class="row g-2 mb-3">
        <div class="col-md-6">
            <select class="form-select" name="productId" asp-items="ViewBag.Products">
                <option value="">Tüm Ürünler</option>
            </select>
        </div>
        <div class="col-md-6 d-flex gap-2">
            <button type="submit" class="btn btn-outline-secondary">Filtrele</button>
            <a asp-action="Index" class="btn btn-outline-dark">Temizle</a>
        </div>
    </form>

    <div class="card shadow-sm">
        <div class="table-responsive">
            <table class="table table-striped mb-0">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Yorum</th>
                        <th>Ürün Id</th>
                        <th>Kullanıcı</th>
                        <th>Oluşturma</th>
                        <th class="text-end">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count > 0)
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Text</td>
                                <td>@item.ProductId</td>
                                <td>@item.UserId</td>
                                <td>@item.CreateOn.ToString("dd.MM.yyyy HH:mm")</td>
                                <td class="text-end">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Detay</a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning">Düzenle</a>
                                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Yorumu silmek istediğinize emin misiniz?')">Sil</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center py-4">Kayıtlı yorum bulunamadı.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>