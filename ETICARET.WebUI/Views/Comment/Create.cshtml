@model ETICARET.WebUI.Models.CommentModel

@{
    ViewData["Title"] = "Yorum Ekle";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">Yeni Yorum</div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="ProductId" class="form-label">Ürün</label>
                            <select asp-for="ProductId" class="form-select" asp-items="ViewBag.Products">
                                <option value="0">Ürün seçiniz</option>
                            </select>
                            <span asp-validation-for="ProductId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Text" class="form-label">Yorum</label>
                            <textarea asp-for="Text" class="form-control" rows="5" placeholder="Yorumunuzu yazın..."></textarea>
                            <span asp-validation-for="Text" class="text-danger"></span>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-success">Kaydet</button>
                            <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

